<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".changeEmail" android:background="#FF71C2B9">

    <TextView
            android:text="change your email address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" android:id="@+id/textView4" android:textAllCaps="true"
            android:textColor="#000" android:textSize="24sp" android:textStyle="bold" android:background="#FFBE3F3B"
            android:padding="15dp" android:layout_marginTop="25pt"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:layout_centerInParent="true">
        <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_edit_text_change"
                android:layout_marginBottom="15dp"
                android:padding="15dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="#FFFB87B2"
                android:hint="old_email@gmail.com"
                android:textColorHint="#FF6F7171"/>


        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/user_edit_text_password_change"
                android:layout_marginBottom="15dp"
                android:padding="15dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="#FF70FA7A"
                android:hint="password"
                android:textColorHint="#FF6F7171"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/new_email_edit_text_change"
                android:layout_marginBottom="15dp"
                android:padding="15dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="#fff"
                android:hint="new_email@gmail.com"
                android:textColorHint="#FF6F7171"/>

        <Button
                android:text="update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/change_email_btn" android:textSize="20sp"
                android:textStyle="bold" android:layout_margin="25dp" android:padding="15dp"
                android:background="#FF3169F6"/>
    </LinearLayout>
</RelativeLayout>