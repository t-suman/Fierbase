<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".firebase_storage">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/image_view"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                android:layout_weight="1"/>
        <Button
                android:text="upload image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/upload_image_btn"
                android:textSize="20sp" android:textStyle="bold" android:background="#E92B2B"/>
    </LinearLayout>
</RelativeLayout>