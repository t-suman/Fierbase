<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login_activity"
        android:background="#018A7E">

    <EditText
            android:layout_width="300dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/ip_email_login"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:hint="user@gmail.com"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColorHint="#FF99A1A0"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/ip_pass_login"
            android:layout_below="@+id/ip_email_login"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            android:hint="password"
            android:textColorHint="#FF99A1A0"/>
    <TextView
            android:text="LOGIN PAGE"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="35pt"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="#1346AC"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="2">
        <Button
                android:text="reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_btn_login"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:onClick="Reset" android:textSize="20sp"/>
        <Button
                android:text="login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_btn_login"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#FF186417" android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>