<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".password_reset"
        android:background="#9E9494">

    <TextView
            android:text="reset password page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:padding="10dp"
            android:layout_marginTop="20pt" android:textAllCaps="true" android:textColor="@color/colorAccent"
            android:textSize="24sp" android:textStyle="bold"
            android:textAlignment="center" android:background="@color/colorPrimary"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email_reset_page" android:background="#fff" android:textColor="#000"
            android:textColorHint="#FF8C9997" android:textSize="18sp" android:hint="user@gmail.com"
            android:padding="10dp" android:layout_centerInParent="true"/>
    <Button
            android:text="reset"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/reset_btn"
            android:layout_below="@+id/email_reset_page" android:layout_centerHorizontal="true"
            android:layout_marginTop="20pt" android:padding="10dp" android:background="#FF32208A"
            android:textSize="20sp" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="2" android:layout_alignParentBottom="true">
        <Button
                android:text="login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/login_reset_page" android:layout_weight="1"
                android:background="#FFA64E6E" android:textSize="18sp" android:textStyle="bold"/>
        <Button
                android:text="signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/signup_reset_page" android:layout_weight="1"
                android:textSize="18sp" android:textStyle="bold" android:background="#FF5E928C"/>
    </LinearLayout>
</RelativeLayout>