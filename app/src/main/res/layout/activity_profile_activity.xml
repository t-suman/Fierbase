<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile_activity" android:background="#61B2F3">

    <TextView
            android:text="Fill-out the required fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:textStyle="bold"
            android:textSize="24sp" android:textColor="#FFDC101A" android:textAllCaps="true"
            android:layout_marginTop="30dp"
            android:textAlignment="center" android:padding="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerInParent="true">
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_first_name" android:layout_margin="10dp" android:padding="10dp"
                android:layout_gravity="center" android:background="#fff" android:hint="first name"
                android:textColorHint="#FFB6B6B6"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_last_name" android:layout_margin="10dp" android:padding="10dp"
                android:layout_gravity="center" android:background="#fff" android:hint="last name"
                android:textColorHint="#FFB6B6B6"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_userid" android:layout_margin="10dp" android:padding="10dp"
                android:layout_gravity="center" android:background="#fff" android:hint="userID"
                android:textColorHint="#FFB6B6B6"/>
    </LinearLayout>
    <Button
            android:text="update"
            android:layout_width="250dp"
            android:layout_height="wrap_content" android:id="@+id/userinfo_update_btn"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:textColor="#000"
            android:textSize="20sp" android:textStyle="bold" android:background="#FFA82AFC"
            android:layout_marginBottom="20dp"/>
</RelativeLayout>